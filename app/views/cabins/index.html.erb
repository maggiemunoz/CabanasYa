      <div class="cabin-info">
        <h4 class="cabin-title"><%= cabin.name%></h4> 
        <p class="cabin-description"><%= cabin.description%></p> 

        <p class="cabin-datelabel"> Disponibilidad mas cercana:</p> 
        <p class="cabin-date"> <%= nearest_date(cabin).to_s(:long) %> </p> 

        <div class="cabin-button">
        
        </div>

        <p class="cabin-pricelabel"> precio por noche:</p> 
        <p class="cabin-price"> $<%= cabin.price%> </p> 
      </div>
      <%= image_tag(cabin.image, style:"width:50%") %>
    </div>
  <% end %>
<% end %>
